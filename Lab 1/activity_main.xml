<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="false"
    android:layout_centerInParent="false"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorTitle"
        android:gravity="center"
        android:text="@string/lab_1_text"
        android:textColor="@color/colorTitleText"
        android:textSize="40sp"
        android:typeface="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <EditText
            android:id="@+id/username"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:background="@color/colorInput"
            android:hint="@string/username_text"
            android:textAlignment="center"
            android:textSize="30sp"
            android:autofillHints=""
            android:inputType="textPassword">


        </EditText>

        <EditText
            android:id="@+id/password"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorInput"
            android:hint="@string/password_text"
            android:textAlignment="center"
            android:textSize="30sp"
            android:autofillHints=""
            android:inputType="textPassword">


        </EditText>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:background="@color/colorHumber"
            android:text="@string/humber_text"
            android:gravity="center"
            android:textColor="@color/colorTextBlack"
            android:textSize="30sp">

        </TextView>

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/colorRyerson"
            android:text="@string/ryerson_text"
            android:gravity="center"
            android:textColor="@color/colorTextWhite"
            android:textSize="30sp">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:background="@color/colorYork"
            android:text="@string/york_text"
            android:gravity="center"
            android:textColor="@color/colorTextBlack"
            android:textSize="30sp">

        </TextView>

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/colorSeneca"
            android:text="@string/seneca_text"
            android:gravity="center"
            android:textColor="@color/colorTextWhite"
            android:textSize="30sp">

        </TextView>

    </LinearLayout>


</LinearLayout>